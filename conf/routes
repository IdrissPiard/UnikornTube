# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)


### DATA METHODS ###

## GET Methods ##

# Get the (list of) last uploaded videos
GET     /video/last     controllers.PlayInterface.getLastVideo

# Get the (list of) most popular videos
GET     /video/popular     controllers.PlayInterface.getPopularVideo

# Get the (list of) comments of a video
GET     /video/:videoId/comments     controllers.PlayInterface.getComments(videoId: Int)

# Get the (list of) playlists of an user
GET     /user/:userId/playlists    controllers.PlayInterface.getPlaylists(userId: Int)

# Get a playlist
GET     /playlist/:playlistId     controllers.PlayInterface.getPlaylist(playlistId: Int)

# Get a video (metadata)
GET     /video/:videoId     controllers.PlayInterface.getVideo(videoId: Int)

# Get a video (stream)
#TODO

### ACTION METHODS ###

## POST Methods ##

# register a new users
POST     /register     controllers.PlayInterface.register

# login an existing user
POST     /login     controllers.PlayInterface.login

# vote on a video
POST     /video/:videoId/vote     controllers.PlayInterface.addVote(videoId: Int)

# comment on a video
POST     /video/:videoId/comment     controllers.PlayInterface.addComment(videoId: Int)

# create a playlist
POST     /playlist     controllers.PlayInterface.addPlaylist

# put a video on an existing playlist
PUT     /playlist     controllers.PlayInterface.addVideoToPlaylist

# subscribe to a channel
POST     /channel/subscribe     controllers.PlayInterface.subscribe

